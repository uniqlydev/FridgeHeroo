<%-include('partials/header.ejs')%>

<link rel="stylesheet" href="/css/cart/register.css"> 
<!-- scripts -->

</head>
<body>
    <div class="container">
        
        <%-include('partials/nav-bar.ejs')%>
        
        <div class="body-parents">
            <div class="kaartehan-container">
                <h3 class="kaartehan-title"> Add your products! </h3>
            </div>
            
            <div class="register-container">
                <label for="productName">Product Name:</label>
                <input type="text" id="productName" class="register-input" placeholder="Product Name">

                <label for="category">Category:</label>
                <select class="item-type" name="category" id="category">
                    <option value="Meat">Meat</option>
                    <option value="Dairy">Dairy</option>
                    <option value="Fruits">Fruit</option>
                    <option value="Vegetable">Vegetable</option>
                </select>

                <label for="expirationDate">Expiration Date:</label>
                <input type="date" id="expirationDate">

                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" class="register-input" placeholder="Quantity">
                <input type="submit" class="button-register" placeholder="Add to Fridge"> 

            </div>
        </div>
    </div>
</body>
</html>
